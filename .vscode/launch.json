{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Unit Test",
            "type": "gdb",
            "request": "launch",
            "target": "cmake-build/unit-tests",
            "arguments": "--gtest_filter=DistributedDFTest.HaloExchangeMultiGPU",
            "cwd": "${workspaceRoot}",
            "env": {
                "LD_LIBRARY_PATH": "/usr/lib64"
            },
        },
        {
            "name": "Topology Demo",
            "type": "gdb",
            "request": "launch",
            "target": "cmake-build/topology-demo",
            "arguments": "-nx 160 -ny 110 -nz 100 -d 8",
            "cwd": "${workspaceRoot}",
            "env": {
                "LD_LIBRARY_PATH": "/usr/lib64"
            },
        },
        {
            "name": "Rafsine",
            "type": "gdb",
            "request": "launch",
            "target": "cmake-build/rafsine",
            // "arguments": "-s problems/hospital/settings.lua -g problems/hospital/geometry.lua -d 8",
            "arguments": "-s problems/data_center/settings.lua -g problems/data_center/geometry.lua -d 8",
            // "arguments": "-s problems/pod2/settings.lua -g problems/pod2/geometry.lua -d 8",
            "cwd": "${workspaceRoot}",
            "env": {
                "LD_LIBRARY_PATH": "/usr/lib64"
            },
        }
    ]
}