{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Unit Test",
            "type": "gdb",
            "request": "launch",
            "target": "cmake-build/unit-tests",
            "arguments": "--gtest_filter=DistributionArray.CopyTest",
            "cwd": "${workspaceRoot}",
            "env": {
                "LD_LIBRARY_PATH": "/usr/lib64"
            },
        },
        {
            "name": "Sublattice Demo",
            "type": "gdb",
            "request": "launch",
            "target": "cmake-build/sublattice-demo",
            "arguments": "-nx 30 -ny 50 -nz 20 -d 9",
            "cwd": "${workspaceRoot}",
            "env": {
                "LD_LIBRARY_PATH": "/usr/lib64"
            },
        },
        {
            "name": "Voxel Mesh Demo",
            "type": "gdb",
            "request": "launch",
