            "arguments": "",
            "cwd": "${workspaceRoot}",
            "env": {
                "LD_LIBRARY_PATH": "/usr/lib64"
            },
        },
        {
            "name": "Voxel Area Demo",
            "type": "gdb",
            "request": "launch",
            "target": "cmake-build/voxarea-demo",
            "arguments": "",
            "cwd": "${workspaceRoot}",
            "env": {
                "LD_LIBRARY_PATH": "/usr/lib64"
            },
        },
        {
            "name": "Rafsine",
            "type": "gdb",
            "request": "launch",
            "target": "cmake-build/rafsine",
            // "arguments": "-d 9",
            // "arguments": "-f problems/hospital/hospital.lbm -d 9",
            // "arguments": "-f problems/data_center/data_center.lbm -d 9",
            "arguments": "-f problems/pod2/pod2.lbm -d 9",
            "cwd": "${workspaceRoot}",
            "env": {
                "LD_LIBRARY_PATH": "/usr/lib64"
            },
        }
    ]
